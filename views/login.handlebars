<!--Signin and Signup Form-->
<div class="container p-5">
    <form>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="email" id="email-login" class="form-control" />
            <label class="form-label" for="email-login">Email address</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="password-login" class="form-control" />
            <label class="form-label" for="password-login">Password</label>
        </div>

        <!-- Submit button -->
        <div class="text-center">
        <button type="submit" id="login-btn" class="btn btn-primary btn-block mb-4">Sign in</button>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member?</p>
            <button type="submit" id="signup" class="btn btn-primary btn-block mb-4">Sign up</button>

        </div>
    </form>
</div>

<script src="/js/login.js"></script>